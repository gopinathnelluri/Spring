<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="triangle" class="us.gopinath.Triangle">
		<property name="pointA" ref="zeroPoint"></property>
		<property name="pointB" ref="onePoint"></property>
		<property name="pointC" ref="twoPoint"></property>
	</bean>
	<bean id="zeroPoint" class="us.gopinath.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>
	<bean id="onePoint" class="us.gopinath.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
	</bean>
	<bean id="twoPoint" class="us.gopinath.Point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
	</bean>
	
</beans>